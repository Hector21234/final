{% extends "layout.html.twig" %}
{% block content %}
	<div id="content" style=" background-color:#cfcfcf;position:relative;left:900px; top:200px;width:400px;color:black;">>
		<div id="form_container">
			<form method="post" action="">
				<div>
					<h2>Editar Producto {{ data.getNombre() }}</h2>
				</div>


				<label for="id">Id</label>
				<div>
					<input name="id" type="text" maxlength="45" size="45" value="{{data.getId}}"/>
				</div>

				<label for="nombre">Nombre</label>
				<div>
					<input name="nombre" type="text" maxlength="45" size="45" value="{{data.getNombre}}"/>
				</div>
                <label for="modelo">Modelo</label>
				<div>
					<input name="modelo" type="text" maxlength="45" size="45" value="{{data.getModelo}}"/>
				</div>
                <label for="info">Info</label>
				<div>
					<input name="info" type="text" maxlength="500" size="45" value="{{data.getInfo}}"/>
				</div>
                <label for="Imagen">Imagen</label>
				<div>
					<input name="imagen" type="text" maxlength="500" size="45" value="{{data.getImagen}}"/>
				</div>


				<input type="submit" name="submit" value="Update"/>
		</form>
	</div>
</div>{% endblock %}