	{{task.getNombre()}}
	 <a href='/delete/{{task.getId()}}'style="position:relative;left:700px;top:80px;">
	 <img src="/image/trash.jpg" width="40px" height="40px">
	 </a>
	 <a href='/info/{{task.getId()}}'class="info" style="text-decoration: none;"> Info producto </a>
	  <a href='/update/{{task.getId()}}'class="update" style="text-decoration: none; position:relative;left:240px;top:80px;font-size:25px;"> Editar producto </a>
</div>


			{% endfor %}
{% endblock %}